    {
      "name": "2. Query Processing",
      "item": [
        {
          "name": "기본 생산량 조회",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('thread_id', jsonData.thread_id);",
                  "    pm.environment.set('message_id', jsonData.message_id);",
                  "    console.log('✅ 쿼리 실행 성공');",
                  "    console.log('생성된 SQL: ' + jsonData.generated_sql);",
                  "    console.log('결과 행 수: ' + jsonData.result_data.row_count);",
                  "} else {",
                  "    console.log('❌ 쿼리 실행 실패');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"오늘 생산량은?\",\n  \"context_tag\": \"@현장\"\n}"
